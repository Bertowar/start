<h2>Lista de Materias-Primas: </h2>
<hr>
<a href="/admin/materias/add"><button class="btn btn-success">Nova Mat√©ria-Prima</button></a>

{{#each materias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{cod_mp}}</h4>
        <small>Nome: {{desc_mp}}</small><br />
        <small>Espessura: {{espessura_mp}}</small><br />
        <small>Comprimento: {{comprimento_mp}}</small><br />
        <small>Peso: {{peso_mp}}</small><br />
        <small>Custo: {{custo_mp}}</small><br />
        <small>Data: {{#formatDate date_mp}}{{/formatDate}}</small><br />
        <a href="/admin/materias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar MP</button></a>
        <form action="/admin/materias/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    </div>
</div>

{{else}}
<h4 class="mt-3">Nenhuma materia-prima registradas!</h4>
{{/each}}