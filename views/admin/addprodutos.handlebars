            <label for="validationServer05">Etapa 1</label>
            <input type="text" class="form-control is-invalid" placeholder="Etapa-1" name="etapa1">
            </!--div>
          <div class="col-md-4 mb-3">
            <input type="text" class="form-control is-invalid" placeholder="Tempo1" name="tempo1">
          </div --> 
            <input type="text" placeholder="Etapa-1" name="etapa1">
            <input type="text" placeholder="Tempo-1" name="tempo1">   
            <input type="text" placeholder="Etapa-2" name="etapa2">
            <input type="text" placeholder="Tempo-2" name="tempo2">
            <input type="text" placeholder="Etapa-3" name="etapa3">
            <input type="text" placeholder="Tempo-3" name="tempo3">
            <input type="text" placeholder="Etapa-4" name="etapa4">
            <input type="text" placeholder="Tempo-4" name="tempo4">
            <input type="text" placeholder="Etapa-5" name="etapa5">
            <input type="text" placeholder="Tempo-5" name="tempo5">
            <input type="text" placeholder="Etapa-6" name="etapa6">
            <input type="text" placeholder="Tempo-6" name="tempo6">

      </div>
    </div>
  </div>
</div>
<div>
  <button class="btn btn-primary mt-3" type="submit">Salvar Produto</button>
</div>
</form>
</div>
